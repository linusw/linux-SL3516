# This shit is used to handle the brain-dead pin mux design.

menu "FTSUC010 Pin MUX settings"

choice
	prompt "Function group EXTAHB"
	default FTSCU010_PINMUX_FGEXTAHB_EXTAHB

	config FTSCU010_PINMUX_FGEXTAHB_EXTAHB
		bool "Enable extend AHB"

	config FTSCU010_PINMUX_FGEXTAHB_PERIPHERALS
		bool "Enable peripherals that use pins of extend AHB"

endchoice

choice
	prompt "Function group SATA"
	default FTSCU010_PINMUX_FGSATA_EXTAHB

	config FTSCU010_PINMUX_FGSATA_EXTAHB
		bool "Enable extend AHB pins in FG_SATA"

	config FTSCU010_PINMUX_FGSATA_SATA
		bool "Enable SATA"

	config FTSCU010_PINMUX_FGSATA_EXTDMA
		bool "Enable EXTDMA[2..3]"

endchoice

choice
	prompt "Function group ISP"
	default FTSCU010_PINMUX_FGISP_EXTAHB

	config FTSCU010_PINMUX_FGISP_EXTAHB
		bool "Enable extend AHB pins in FG_ISP"

	config FTSCU010_PINMUX_FGISP_GPIO1
		bool "Enable GPIO1[4..31]"

	config FTSCU010_PINMUX_FGISP_ISP
		bool "Enable Image Signal Processor"

endchoice

choice
	prompt "Function group TS"
	default FTSCU010_PINMUX_FGTS_EXTAHB

	config FTSCU010_PINMUX_FGTS_EXTAHB
