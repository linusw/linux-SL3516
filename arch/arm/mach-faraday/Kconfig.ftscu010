	config FTSCU010_PINMUX_FGUART2_UART2
		bool "Enable UART2 w/o RTS/CTS pins"

endchoice

choice
	prompt "Function group UART3"
	default FTSCU010_PINMUX_FGUART3_GPIO1

	config FTSCU010_PINMUX_FGUART3_GPIO1
		bool "Enable GPIO1[26..27]"

	config FTSCU010_PINMUX_FGUART3_UART3
