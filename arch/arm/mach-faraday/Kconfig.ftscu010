	default FTSCU010_PINMUX_FGLCD_LCD_MICE

	config FTSCU010_PINMUX_FGLCD_LCD
		bool "Enable LCD and SDC0"

	config FTSCU010_PINMUX_FGLCD_TV_MICE
		bool "Enable TV encoder interface, ICE of master CPU (FA626TE) and SDC0"

	config FTSCU010_PINMUX_FGLCD_LCD_MICE
		bool "Enable LCD and ICE of master CPU (FA626TE)"

endchoice

choice
	prompt "Function group EBI"
	default FTSCU010_PINMUX_FGEBI_EBI

	config FTSCU010_PINMUX_FGEBI_EBI
